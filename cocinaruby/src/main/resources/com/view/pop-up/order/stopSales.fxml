            </VBox>
            <HBox alignment="CENTER" spacing="40.0">
               <children>
                  <Button fx:id="confirmButton" mnemonicParsing="false" styleClass="stopSales-btn-confirm" text="CONFIRMAR">
                     <padding>
                        <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="stopSales-btn-cancel" text="CANCELAR">
                     <padding>
                        <Insets bottom="10.0" left="25.0" right="25.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
