<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane id="editOrder-root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="750.0" stylesheets="@../../css/styles.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.Controller.popup.sales.EditOrderDialogController">
   <center>
      <VBox id="editorder-container" prefWidth="800.0" spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label styleClass="confirmOrder-header-label" text="EDITAR ORDEN" />
            
            <VBox styleClass="editorder-section">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="30.0">
                     <children>
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="confirmOrder-label" text="CLIENTE:" />
                              <Label fx:id="clientLabel" styleClass="editorder-value-label" text="Cliente General" />
                           </children>
                        </VBox>
                        <VBox spacing="5.0">
                           <children>
                              <Label styleClass="confirmOrder-label" text="ESTADO:" />
                              <Label fx:id="statusLabel" styleClass="editorder-value-label" text="No Impreso" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <VBox styleClass="editorder-section">
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="35.0" spacing="15.0">
                     <children>
                        <Label styleClass="confirmOrder-label" text="PAGO ORIGINAL:" />
                        <Label fx:id="originalPaymentLabel" styleClass="editorder-value-label" text="0.00" HBox.hgrow="ALWAYS" />
                     </children>
                  </HBox>
                  
                  <HBox alignment="CENTER_LEFT" spacing="15.0" VBox.vgrow="NEVER">
                     <children>
                        <Label styleClass="confirmOrder-label" text="PAGO CLIENTE (NUEVO):" />
                        <TextField fx:id="pagoTextField" prefHeight="35.0" styleClass="editorder-field-editable" text="0.00" HBox.hgrow="ALWAYS" />
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <VBox prefWidth="694.0" styleClass="editorder-section" VBox.vgrow="ALWAYS">
               <children>
                  <Label styleClass="confirmOrder-label" text="DETALLES DE LA ORDEN:" />
                  
                  <StackPane prefHeight="400.0" prefWidth="760.0" VBox.vgrow="ALWAYS">
                     <children>
                        <TableView fx:id="detailsTable" editable="true" prefHeight="400.0" styleClass="table">
                           <columns>
                              <TableColumn prefWidth="220.0" sortable="false" text="PRODUCTO" />
                              <TableColumn prefWidth="130.0" sortable="false" text="CANTIDAD" />
                              <TableColumn prefWidth="170.0" sortable="false" text="PRECIO (C/U)" />
                              <TableColumn editable="false" prefWidth="170.0" sortable="false" text="TOTAL" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </StackPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <HBox alignment="CENTER_RIGHT" prefHeight="35.0" spacing="10.0">
               <children>
                  <Label fx:id="generalTotalLabel" text="TOTAL GENERAL: 0.00" HBox.hgrow="ALWAYS" style="-fx-font-size: 1.2em; -fx-font-weight: bold; -fx-text-fill: #E67E22;" />
               </children>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </HBox>
            
            <HBox alignment="CENTER" prefHeight="60.0" spacing="30.0">
               <children>
                  <Button fx:id="saveButton" mnemonicParsing="false" styleClass="confirmOrder-btn-success" text="GUARDAR CAMBIOS">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding>
                  </Button>
                  <Button fx:id="cancelButton" mnemonicParsing="false" styleClass="confirmOrder-btn-back" text="CANCELAR">
                     <padding>
                        <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
                     </padding>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
